<div class="container">
  <form method="get" action="/restaurants/new" id="form" novalidate>



    <h1>
      餐廳介紹資料填寫
    </h1>
    <hr />

    <div class="form-row">
      <div class="col input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">名稱：</span>
        </div>
        <input type="text" class="form-control" id="name" name="name" placeholder="請輸入餐廳中文名稱" required>
        <div class="valid-feedback">OK!</div>
        <div class="invalid-feedback">This field is required.</div>
      </div>

      <div class="col input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">英文名稱：</span>
        </div>
        <input type="text" class="form-control" id="english-name" name="english-name" placeholder="請輸入餐廳英文名稱" required>
        <div class="valid-feedback">OK!</div>
        <div class="invalid-feedback">This field is required.</div>
      </div>




    </div>


    <div class="form-group">
      <label for="category">類別：</label>
      <input type="text" class="form-control" id="category" name="category" placeholder="請輸入餐廳類別或依據預設清單來選" required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>

    <div class="form-group">
      <label for="rating">評分：</label>
      <input type="text" class="form-control" id="rating" name="rating" placeholder="請輸入你的全名 ..." required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>

    <div class="form-group">
      <label for="description">簡介：</label>
      <input type="text" class="form-control" id="description" name="description" placeholder="請輸入你的全名 ..." required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="form-group">
      <label for="img-link">圖片連結：</label>
      <input type="text" class="form-control" id="img-link" name="imglink" placeholder="請輸入你的全名 ..." required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>


    <button type="submit" id="submit">確認提交</button>
  </form>
</div>


<script src=/javascripts/formValidation.js></script>