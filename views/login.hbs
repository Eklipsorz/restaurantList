<div class="row mb-5">
  <div class="col-md-5 col-8 m-auto">
    <form action="/users/login" method="POST" class="p-3 entry-form">
      <h1 class="text-center">Login</h1>

      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" id="email" name="email" placeholder="Enter your email">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" id="password" name="password" placeholder="Enter your password">
      </div>

      <btn type="submit" class="btn btn-primary btn-block">Login</btn>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </form>
  </div>
</div>