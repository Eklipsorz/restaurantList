<!-- search bar -->
<div class="container search-bar">

  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="form-row">
          <div class="input-group col">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{#unless enableAlert}}{{originKeyword}}{{/unless}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
            <div class="input-group col">
              <select class="form-control" id="sort" name="sort">
                <option value="a-to-z">按字母排序：A 到 Z</option>
                <option value="z-to-a">按字母排序：Z 到 A</option>
                <option value="a-to-z">按中文筆劃排序：小 到 大</option>
                <option value="z-to-a">按中文筆畫排序：大 到 小</option>
                <option value="category">類別</option>
                <option value="location">地區</option>
              </select>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>


</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src={{ this.image }} alt={{ this.name }}>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="card-footer d-flex justify-content-end">
              <a class="btn btn-outline-primary mr-2" href="/restaurants/{{ this._id }}/edit">Edit</a>

              <a class="btn btn-outline-info mr-2" href="/restaurants/{{ this._id }}">
                Detail
              </a>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" class="delete-form" method="post"
                data-name="{{this.name}}" style="display: inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each }}
      </div>
    </div>
  </div>
</div>


{{{alertModel enableAlert message }}}


